<%= form_for @item do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.label :price %><br>
  $<%= f.number_field :price %><br>
  <%= f.label :condition %><br>
  <%= f.select(:condition, Item.conditions) %><br>
  <%= f.label :category %><br>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %><br>
  <%= f.label :seller_id %><br>
  <%= f.collection_select(:seller_id, User.all, :id, :name) %><br>
  <%= f.submit %>
<% end %>
