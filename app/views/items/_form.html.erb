<%= form_for @item do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.label :price %><br>
  $<%= f.number_field :price, class: :text_field, step: :any %><br>
  <%= f.label :condition %><br>
  <%= f.select(:condition, Item.conditions) %><br>
  <%= f.label :category %><br>
  <%= f.collection_select(:category_id, Category.all.order(:name), :id, :name) %><br>
  <br>
  <%= image_tag(@item.item_pic_url) if @item.item_pic? %>
  <%= f.label :item_pic, "Upload Picture" %><br>
  <%= f.file_field :item_pic %><br>
  <%= f.hidden_field :item_pic_cache %>
  <%= f.submit %>
<% end %>
