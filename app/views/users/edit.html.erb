<h1>Edit User</h1>
<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br><br>
  <%= f.label :password %>
  <%= f.text_field :password %><br><br>
  <%= f.label :bio %>
  <%= f.text_area :bio %><br><br>
  <% if current_user.admin %>
    <%= f.label :admin %>
    <%= f.check_box :admin %>
  <% end %>
  <%= f.submit %>
<% end %>
