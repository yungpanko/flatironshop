<h1>Edit User</h1>
<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <br>
  <%= f.label :password, "Please re-enter your password to update" %>
  <%= f.text_field :password %><br>
  <br>
  <%= f.label :bio %>
  <%= f.text_area :bio %><br>
  <br>
  <div class="col-md-3">
    <div class="thumbnail">
      <%= image_tag(@user.avatar_url) if @user.avatar? %>
    </div>
  </div>
  <%= f.label :avatar, "Upload Picture" %><br>
  <%= f.file_field :avatar %><br>
  <br>
  <br>
  <% if current_user.admin %>
    <%= f.label :admin %>
    <%= f.check_box :admin %>
  <% end %>
  <%= f.submit %>
<% end %>
