<div class="row">
  <%= form_for @order do |f| %>
  <div class="form-group col-xs-7">
    <%= f.label :street_address, class:'control-label' %>
    <%= f.text_field :street_address, class:'form-control' %>
  </div>
  <div class="form-group col-xs-7">
    <%= f.label :zip_code, class:'control-label' %>
    <%= f.text_field :zip_code, class:'form-control' %>
  </div>
  <div class="form-group col-xs-7">
    <%= f.label :city, class:'control-label' %>
    <%= f.text_field :city, class:'form-control' %>
  </div>
  <div class="form-group col-xs-7">
    <%= f.label :state, class:'control-label' %>
    <%= f.select :state, options_for_select(CS.states(:us)), class:'form-control' %>
  </div>

  <div class="clearfix"></div>

  <div class="form-group col-sm-3">
    <%= f.submit "Submit Order", class:'btn btn-primary' %>
  </div>
  <div class="clearfix"></div>
  <div class="form-group col-sm-3">
    <%= link_to "Cancel", cart_path, class:'btn btn-danger' %>
  </div>
  <% end %>
</div>
